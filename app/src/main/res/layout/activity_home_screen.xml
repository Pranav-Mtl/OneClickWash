<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/DrawerLayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/toolbar_bg"
            app:theme="@style/Toolbar_Theme"
            android:layout_gravity="center"
            android:minHeight="?attr/actionBarSize">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_home_logo_big"
                />


        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_subscription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/home_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/home_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <ImageButton
                            android:id="@+id/home_edit_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_edit_sky"
                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/gray_color">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Subscription Details"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:weightSum="2"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:text="Package Name:"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/package_bullet"
/>

                        <TextView
                            android:id="@+id/home_package_name"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:text="1 user"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:weightSum="2"
                        android:layout_marginTop="5dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:text="Package Price:"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/package_bullet"  />

                        <TextView
                            android:id="@+id/home_package_amount"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:text="5000"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:weightSum="2"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:text="Start Date:"
                            android:drawablePadding="5dp"

                            android:drawableLeft="@drawable/dates_bullet"/>

                        <TextView
                            android:id="@+id/home_start_date"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:text="8 dec 2015"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8dp"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:text="End Date:"
                            android:drawablePadding="5dp"


                            android:drawableLeft="@drawable/dates_bullet"/>

                        <TextView
                            android:id="@+id/home_end_date"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:text="8 dec 2015"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:weightSum="2"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:text="Total Pickups:"
                            android:drawablePadding="5dp"


                            android:drawableLeft="@drawable/pickup_bullet"/>

                        <TextView
                            android:id="@+id/home_tot_pickup"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8dp"
                        android:weightSum="2"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:text="Remaining Pickups:"
                            android:drawablePadding="5dp"

                            android:drawableLeft="@drawable/pickup_bullet"/>

                        <TextView
                            android:id="@+id/home_remaining_pick"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:weightSum="2"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:text="Total Paid Clothes:"
                            android:drawablePadding="5dp"


                            android:drawableLeft="@drawable/clothes_bullet"/>
                        <TextView
                            android:id="@+id/home_tot_cloth"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:text="70"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8dp"
                        android:weightSum="2"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:text="Remaining Paid Clothes:"
                            android:drawablePadding="5dp"


                            android:drawableLeft="@drawable/clothes_bullet"/>

                        <TextView
                            android:id="@+id/home_remaining_cloth"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:weightSum="2"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.3"
                            android:layout_height="wrap_content"
                            android:text="Number of Free Clothes:"
                            android:drawablePadding="5dp"


                            android:drawableLeft="@drawable/free_bullet"/>

                        <TextView
                            android:id="@+id/home_free_cloth"
                            android:layout_width="0dp"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/textColor"
                            />


                    </LinearLayout>





                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="50dp"
                android:id="@+id/ll_no_subscription"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_home_htw"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_monthly_heading"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/sky"
                    android:gravity="center_vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly Subscription"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_text"
                            android:text="Wash + Dry + Stream Iron"
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_text_size"
                            />

                        <ImageButton
                            android:id="@+id/home_subscription_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_arrow_down"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_monthly_subscription"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_home_subscription_detail_one"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"


                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Fixed Free Pickups"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="which can be scheduled at any time"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="during the month"
                        />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/ic_home_subscription_detail_one"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Fixed number of clothes per"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="subscription package"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/ic_home_subscription_detail_two"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Clothes will be returned MACHINE WASHED +"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text=" MACHINE DRIED + STREAM IRONED "
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text=" within 48 to 72 hours"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_drycleaning_heading"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/sky"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dry Cleaning"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            />

                        <ImageButton
                            android:id="@+id/home_drycleaning_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_arrow_down"
                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_drycleaning"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="50dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_home_subscription_detail_one"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Industrial Dry Cleaning Process"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/ic_home_subscription_detail_one"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Dry Cleaned clothes will be delivered"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="within 5-7 days"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/ic_home_subscription_detail_two"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Visit the Pricing Section to know"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="about the Dry Cleaning Rates"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            </ScrollView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bottom_nosubscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >
        <Button
            android:id="@+id/btn_take_subscription"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_flat_customized"
            android:textColor="@color/white"
            android:text="Take Subscription"
            android:textAllCaps="false"
            />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_place_order"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/button_flat_customized"
                android:textColor="@color/white"
                android:text="Place an Order"
                android:textAllCaps="false"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >


            <Button
                android:id="@+id/btn_place_subscription_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_flat_customized"
                android:textColor="@color/white"
                android:text="Place an Order"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </RelativeLayout>

   <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#ffffff"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>

</android.support.v4.widget.DrawerLayout>
