<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.admin.oneclickwash.BookingDetail">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/toolbar_bg"
        app:theme="@style/Toolbar_Theme"
        android:layout_gravity="center"

        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Detail"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/toolbar_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/gray_color"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/detail_book_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order ID #"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/detail_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/detail_book_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/detail_book_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginTop="10dp"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/sky"
            >
            <TextView
                android:id="@+id/detail_book_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Type"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/detail_book_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Pick-up Details"
                android:textStyle="bold"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/detail_book_pick_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@drawable/ic_order_date"
                    android:text=""
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/detail_book_pick_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_order_time"
                    android:text=""
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Drop-off Details"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/detail_book_drop_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@drawable/ic_order_date"
                    android:text=""
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/detail_book_drop_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_order_time"
                    android:text=""
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Cloth Details"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/detail_book_paid_clothes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Paid Clothes:"
                />

            <TextView
                android:id="@+id/detail_book_free_clothes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Free Clothes:"
                />

            <Button
                android:id="@+id/detail_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate this Booking"
                android:textAllCaps="false"
                android:background="@drawable/customized_button"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/pricing_text_size"
                android:minHeight="@dimen/button_size"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_gravity="center"
                />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_ll_reschedule"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/detail_btn_reschedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_flat_customized"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_booking_reschedule"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reschedule Pickup"
                android:textColor="@color/white"
                android:textSize="@dimen/smallest_text_size"

                />
        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            />
        <LinearLayout
            android:id="@+id/detail_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_flat_customized"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_booking_cancel"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel Pickup"
                android:textColor="@color/white"
                android:textSize="@dimen/smallest_text_size"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/detail_layout_dropoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/detail_btn_schedule_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="@dimen/button_size"
            android:background="@drawable/customized_button"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_booking_reschedule"
            android:text="Schedule Delivery"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:textAllCaps="false"
            android:textSize="@dimen/pricing_text_size"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/detail_layout_redropoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/detail_btn_reschedule_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="@dimen/button_size"
            android:background="@drawable/customized_button"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_booking_reschedule"
            android:text="Reschedule Delivery"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:textAllCaps="false"
            android:textSize="@dimen/pricing_text_size"
            />

    </LinearLayout>
</RelativeLayout>
